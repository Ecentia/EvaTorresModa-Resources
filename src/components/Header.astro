            </svg>
        </button>
        
        {/* Menú Dropdown */}
        <div class="absolute left-1/2 -translate-x-1/2 mt-2 w-60 bg-white text-gray-800 shadow-2xl rounded-lg overflow-hidden opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform group-hover:translate-y-0 translate-y-2 border-t-4 border-eva-gold z-50">
            {categories.length > 0 ? (
                categories.map((cat) => (
                    <a href={`/coleccion/${cat.id}`} class="flex items-center justify-between px-6 py-3.5 hover:bg-gray-50 text-sm hover:text-eva-green transition border-b border-gray-100 last:border-0 group/item">
                        <span>{cat.name}</span>
                        <Icon name="arrow-right" class="w-3 h-3 opacity-0 group-hover/item:opacity-100 -translate-x-2 group-hover/item:translate-x-0 transition-all text-eva-gold" />
                    </a>
                ))
            ) : (
                <span class="block px-6 py-3 text-gray-400 text-xs italic">Sin categorías</span>
            )}
        </div>
      </div>

      <a href="/contacto" class="hover:text-eva-gold transition py-2 border-b-2 border-transparent hover:border-eva-gold">Contacto</a>
    </nav>

    {/* BOTONES DERECHA: ICONO DE FACEBOOK (SOLO ESCRITORIO) */}
    <div class="hidden md:flex items-center gap-4">
        <a href="https://www.facebook.com/evamaria.rodrigueztorres.9" target="_blank" aria-label="Facebook" class="bg-white/10 p-2.5 rounded-full hover:bg-eva-gold hover:text-eva-dark transition-all duration-300 transform hover:scale-105 shadow-sm">
            <Icon name="facebook" class="w-5 h-5" />
        </a>
    </div>

    {/* BOTÓN MENÚ MÓVIL (HAMBURGUESA) */}
    <button id="mobile-menu-btn" class="md:hidden text-white p-2 focus:outline-none hover:text-eva-gold transition" aria-label="Menú">
        <Icon name="menu" class="w-8 h-8" />
    </button>

  </div>

  {/* MENÚ MÓVIL DESPLEGABLE (OVERLAY) */}
  <div id="mobile-menu" class="fixed inset-0 z-[60] bg-white text-eva-dark transform translate-x-full transition-transform duration-300 md:hidden flex flex-col h-[100dvh]">
    <div class="flex justify-between items-center p-4 border-b border-gray-100 bg-eva-cream/30">
        <span class="text-3xl font-brand text-eva-green">Menú</span>
        <button id="mobile-menu-close" class="p-2 text-gray-400 hover:text-eva-green transition rounded-full hover:bg-gray-100">
            <Icon name="close" class="w-8 h-8" />
        </button>
    </div>

    <div class="flex-1 overflow-y-auto p-6 flex flex-col gap-2 font-serif text-lg">
        <a href="/" class="block px-4 py-3 hover:bg-gray-50 rounded-lg transition">Inicio</a>
        <a href="/nosotros" class="block px-4 py-3 hover:bg-gray-50 rounded-lg transition">Nosotros</a>
        
        <div class="py-2">
            <a href="/coleccion" class="block px-4 py-2 font-bold text-eva-green">Colección</a>
            <div class="ml-4 pl-4 border-l-2 border-gray-100 space-y-1 mt-2">
                {categories.map((cat) => (
                    <a href={`/coleccion/${cat.id}`} class="block py-2 px-2 text-base text-gray-600 hover:text-eva-gold transition hover:bg-gray-50 rounded">
                        {cat.name}
                    </a>
                ))}
            </div>
        </div>

        <a href="/contacto" class="block px-4 py-3 hover:bg-gray-50 rounded-lg transition">Contacto</a>
        
        <div class="mt-auto pt-8 flex flex-col gap-4 items-center">
             <div class="w-full h-px bg-gray-100"></div>
             <a href="https://www.facebook.com/evamaria.rodrigueztorres.9" target="_blank" class="flex w-full justify-center items-center gap-2 text-sm uppercase tracking-widest font-bold text-white bg-[#1877F2] px-4 py-3 rounded-full hover:opacity-90 transition shadow-sm">
                <Icon name="facebook" class="w-5 h-5" /> Seguir en Facebook
             </a>
             <a href="tel:+34651688937" class="flex w-full justify-center items-center gap-2 text-sm uppercase tracking-widest font-bold text-eva-green bg-eva-cream px-4 py-3 rounded-full hover:bg-eva-gold hover:text-white transition shadow-sm">
                <Icon name="phone" class="w-5 h-5" /> Llamar ahora
             </a>
        </div>
    </div>
  </div>
</header>

<script>
    const menuBtn = document.getElementById('mobile-menu-btn');
    const closeBtn = document.getElementById('mobile-menu-close');
    const menu = document.getElementById('mobile-menu');

    if (menuBtn && closeBtn && menu) {
        menuBtn.addEventListener('click', () => {
            menu.classList.remove('translate-x-full');
            document.body.style.overflow = 'hidden';
        });

        closeBtn.addEventListener('click', () => {
            menu.classList.add('translate-x-full');
            document.body.style.overflow = '';
        });
    }
</script>