---
import Icon from './Icons.astro';
import { sanityClient } from "sanity:client";

interface Category {
    id: string;
    name: string;
}

// 1. Orden deseado de categorías
const desiredOrder = ['ropa-mujer', 'belleza', 'calzados'];

let categories: Category[] = [];
try {
    const query = `*[_type == "category"]{ 
        "id": slug.current, 
        name 
    }`;
    const allCategories = await sanityClient.fetch(query);

    if (allCategories) {
        categories = allCategories.sort((a: any, b: any) => {
            const indexA = desiredOrder.indexOf(a.id);
            const indexB = desiredOrder.indexOf(b.id);
            return (indexA === -1 ? 99 : indexA) - (indexB === -1 ? 99 : indexB);
        });
    }
} catch (e) {
    console.log("Error cargando categorías del menú");
}
---

{/* --- BARRA SUPERIOR (TOP BAR) MEJORADA --- */}
<div class="bg-eva-dark text-eva-cream text-xs py-2.5 hidden md:block border-b border-white/5">
    <div class="container mx-auto px-4 flex justify-between items-center">
